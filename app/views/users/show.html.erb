<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-lg-4 col-md-6">
    <section class="user-info">
      <%= link_to @user.picture.url do %>
        <%= image_tag @user.picture.medium.url, class: 'profile-picture' if @user.picture? %>
      <% end %>
      <h1>
        <%= @user.name %>
      </h1>
      <ul>
        <li class="user-gender">
          Gender: <%= @user.gender.capitalize %>
        </li>
        <li class="user-age">
          Age: <%= age_in_completed_years @user.birth_date %> years
        </li>
        <li class="user-email">
          <%=  link_to fa_icon("envelope fw", text: @user.email), "mailto:#{@user.email}" %>
        </li>
        <li class="user-phone">
          <%= fa_icon("phone fw", text: @user.phone) %>
        </li>
      </ul>
      <% if current_user.is_administrator_at?(@user.school) %>
        <%= link_to edit_user_path(@user), class: 'btn btn-primary' do %>
          <%= fa_icon 'edit', text: "Edit details" %>
        <% end %>
      <% end %>
    </section>
  </aside>
</div>
